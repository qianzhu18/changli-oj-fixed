  // ç®€å•çš„é¢˜ç›®è§£æå‡½æ•°
  const parseSimpleQuestions = (content: string) => {
    const questions = []
    const lines = content.split('\n')

    for (let i = 0; i < lines.length; i++) {
      const line = lines[i].trim()
      if (line.match(/^\d+\./)) {
        // æ‰¾åˆ°é¢˜ç›®
        const question = line.replace(/^\d+\./, '').trim()
        const options = []
        let answer = ''

        // æŸ¥æ‰¾é€‰é¡¹
        for (let j = i + 1; j < lines.length && j < i + 10; j++) {
          const optionLine = lines[j].trim()
          if (optionLine.match(/^[A-D]\./)) {
            options.push(optionLine.replace(/^[A-D]\./, '').trim())
          } else if (optionLine.includes('ç­”æ¡ˆ') || optionLine.includes('æ­£ç¡®ç­”æ¡ˆ')) {
            answer = optionLine.replace(/.*ç­”æ¡ˆ[ï¼š:]\s*/, '').trim()
            break
          }
        }

        if (question && options.length > 0) {
          questions.push({ question, options, answer })
        }

        if (questions.length >= 5) break // æœ€å¤šè§£æ5é“é¢˜
      }
    }

    return questions
  }

