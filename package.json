{
  "name": "intelligent-quiz-system",
  "version": "1.0.0",
  "description": "智能题库系统 - 基于AI的文件解析和题库生成平台",
  "private": true,
  "workspaces": [
    "apps/web",
    "apps/backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:apps/backend\"",
    "dev:frontend": "cd apps/web && npm run dev",
    "dev:backend": "cd apps/backend && npm run dev",
    "build": "npm run build:frontend && npm run build:apps/backend",
    "build:frontend": "cd apps/web && npm run build",
    "build:backend": "cd apps/backend && npm run build",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:apps/backend\"",
    "start:frontend": "cd apps/web && npm run start",
    "start:backend": "cd apps/backend && npm run start",
    "install:all": "npm install && cd apps/web && npm install && cd ../apps/backend && npm install",
    "clean": "rm -rf node_modules apps/web/node_modules apps/backend/node_modules apps/web/.next apps/backend/dist",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "test": "npm run test:frontend && npm run test:apps/backend",
    "test:frontend": "cd apps/web && npm run test",
    "test:backend": "cd apps/backend && npm run test",
    "lint": "npm run lint:frontend && npm run lint:apps/backend",
    "lint:frontend": "cd apps/web && npm run lint",
    "lint:backend": "cd apps/backend && npm run lint"
  },
  "devDependencies": {
    "@types/pdf-parse": "^1.1.5",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/qianzhu18/intelligent-quiz-system.git"
  },
  "keywords": [
    "quiz",
    "ai",
    "education",
    "file-parsing",
    "nextjs",
    "nodejs",
    "typescript"
  ],
  "author": "千逐 <qianzhu18@example.com>",
  "license": "MIT",
  "dependencies": {
    "@types/multer": "^2.0.0",
    "mammoth": "^1.9.1",
    "multer": "^2.0.2",
    "pdf-parse": "^1.1.1",
    "xlsx": "^0.18.5"
  }
}
