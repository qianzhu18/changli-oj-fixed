{
  "name": "intelligent-quiz-system",
  "version": "1.0.0",
  "description": "智能题库系统 - 基于AI的文件解析和题库生成平台",
  "private": true,
  "workspaces": [
    "study-app",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd study-app && npm run dev",
    "dev:backend": "cd backend && npm run dev:v2",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd study-app && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "cd study-app && npm run start",
    "start:backend": "cd backend && npm run start",
    "install:all": "npm install && cd study-app && npm install && cd ../backend && npm install",
    "clean": "rm -rf node_modules study-app/node_modules backend/node_modules study-app/.next backend/dist",
    "docker:build": "COMPOSE_PROJECT_NAME=quizsystem docker-compose build",
    "docker:up": "COMPOSE_PROJECT_NAME=quizsystem docker-compose up -d --build frontend redis",
    "docker:up:infra": "COMPOSE_PROJECT_NAME=quizsystem docker-compose up -d redis",
    "docker:up:full": "COMPOSE_PROJECT_NAME=quizsystem docker-compose --profile backend up -d --build",
    "docker:down": "COMPOSE_PROJECT_NAME=quizsystem docker-compose down --remove-orphans",
    "docker:logs": "COMPOSE_PROJECT_NAME=quizsystem docker-compose logs -f",
    "start:one": "COMPOSE_PROJECT_NAME=quizsystem docker-compose stop frontend >/dev/null 2>&1 || true; npm run docker:up:infra && concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd study-app && npm run test",
    "test:backend": "cd backend && npm run test",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd study-app && npm run lint",
    "lint:backend": "cd backend && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/qianzhu18/intelligent-quiz-system.git"
  },
  "keywords": [
    "quiz",
    "ai",
    "education",
    "file-parsing",
    "nextjs",
    "nodejs",
    "typescript"
  ],
  "author": "千逐 <qianzhu18@example.com>",
  "license": "MIT",
  "dependencies": {}
}
