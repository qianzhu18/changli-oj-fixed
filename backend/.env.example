# 服务配置
NODE_ENV=development
PORT=3004
HOST=localhost

# 数据库（Supabase Postgres，推荐直连）
# 示例：postgresql://postgres:<PASSWORD>@db.<PROJECT_REF>.supabase.co:5432/postgres?schema=public&sslmode=require
DATABASE_URL=postgresql://postgres:<PASSWORD>@db.<PROJECT_REF>.supabase.co:5432/postgres?schema=public&sslmode=require

# 鉴权
JWT_SECRET=change-this-to-a-secure-random-string
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3002

# Redis（BullMQ 队列）
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# 文件上传
MAX_FILE_SIZE=10485760

# AI（可选）
GEMINI_API_KEY=
AI_MODEL=gemini-pro
AI_TIMEOUT=30000

# 其他
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
