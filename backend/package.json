{
  "name": "quiz-backend",
  "version": "1.0.0",
  "description": "智能题库系统后端API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec \"ts-node -r tsconfig-paths/register\" src/index.ts",
    "dev:v1": "nodemon --exec \"ts-node -r tsconfig-paths/register\" src/server.ts",
    "dev:v2": "nodemon --exec \"ts-node -r tsconfig-paths/register\" src/app-v2.ts",
    "worker": "ts-node -r tsconfig-paths/register src/workers/quizWorker.ts",
    "build": "tsc && npx prisma generate",
    "config:setup": "ts-node -r tsconfig-paths/register src/scripts/setup-config.ts",
    "config:validate": "ts-node -r tsconfig-paths/register -e \"import ConfigValidator from './src/utils/configValidator'; new ConfigValidator().validateAll().then(r => { console.log(r.success ? '✅ 配置验证通过' : '❌ 配置验证失败'); process.exit(r.success ? 0 : 1); })\"",
    "config:generate": "ts-node -r tsconfig-paths/register -e \"import { configManager } from './src/config/settings'; console.log(configManager.generateEnvTemplate())\"",
    "start": "node dist/index.js",
    "start:v1": "node dist/server.js",
    "start:v2": "node dist/app-v2.js",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "db:reset": "npx prisma migrate reset",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:api": "jest --testPathPattern=tests/api",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "quiz",
    "ai",
    "education",
    "typescript",
    "express"
  ],
  "author": "千逐数字资产",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "@prisma/client": "^6.12.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.56.5",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.0.1",
    "form-data": "^4.0.4",
    "global-agent": "^3.0.0",
    "helmet": "^7.1.0",
    "https-proxy-agent": "^7.0.6",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.6.0",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.7",
    "pdf-parse": "^1.1.1",
    "prisma": "^6.12.0",
    "rate-limiter-flexible": "^4.0.1",
    "redis": "^5.6.1",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.4",
    "@types/nodemailer": "^6.4.14",
    "@types/redis": "^4.0.10",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
